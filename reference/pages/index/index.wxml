<view class="container">
  <!-- 卡通头像 -->
  <view class="avatar">
    <!-- 眼睛 -->
    <view class="eyes">
      <view class="eye"></view>
      <view class="eye"></view>
    </view>
    <!-- 嘴巴 -->
    <view class="mouth" animation="{{mouthAnimation}}"></view>
  </view>

  <!-- 新闻文本 -->
  <view class="news-box">
    <text>{{displayedNews}}</text>
  </view>

  <!-- 控制按钮 -->
  <button class="play-btn" bindtap="togglePlayPause">
    {{isPlaying ? '暂停' : '播放'}}
  </button>
</view> 